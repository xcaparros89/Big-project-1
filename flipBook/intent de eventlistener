 if(data){
                data.map(result=>{
                    const id = result.id;
                    const titleText = result.volumeInfo.title.split('"').join('').split("'").join('')
                    const description = result.volumeInfo.description ? result.volumeInfo.description.split('"').join('').split("'").join('') : null;
                    const authors = result.volumeInfo.authors? result.volumeInfo.authors.join(', ').split('"').join('').split("'").join('') : null;
                    const categories = result.volumeInfo.categories? result.volumeInfo.categories.join(', ').split('"').join('').split("'").join('') : 'Nonfiction';
                    const averageRating = result.volumeInfo.averageRating? result.volumeInfo.averageRating : 'Not enought rating data gathered';
                    const image = result.volumeInfo.imageLinks.smallThumbnail ? result.volumeInfo.imageLinks.smallThumbnail : null;
                    const price = result.saleInfo.listPrice ? `<p>${result.saleInfo.listPrice.amount}${result.saleInfo.listPrice.currencyCode} <a href=${result.saleInfo.buyLink} target="_blank">Buy</a></p>` : null;
                    const preview = result.volumeInfo.previewLink ? result.volumeInfo.previewLink : null;
                    const bookPageString = `
                    <h3>${result.volumeInfo.title.split('"').join('').split("'").join('')}</h3>
                    <select id='save-${id}'>
                        <option value=wannaread>Wanna read</option>
                        <option value=reading>Reading</option>
                        <option value=readed>Readed</option>
                    </select>
                    <button onClick='db.addBook(document.getElementById("save-${id}").value, "${id}")'>save</button>
                    <p>Author/s: ${authors}</p>
                    <p>Categories: ${categories}</p>
                    <p>Average rating: ${averageRating}</p>
                    <p>${description}</p>
                    <img src=${image} />
                    <div>${price}</div>
                    <a href=${preview} target="_blank">Read preview</a>
                    <button onClick="author1.basicSearch()" class="return-btn">Return to search</button>
                    `
                    section2.innerHTML += `<h3 onClick="this.bookPage("${bookPageString}")">${titleText}</h3>`;
                    

     })
    }    